<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/photoImageViewMessage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        tools:src="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginUserMessage"
        android:text="login"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/photoImageViewMessage"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/messageLayout"
        android:background="@drawable/background_message"
        android:paddingEnd="10dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:padding="6dp"
        app:layout_constraintStart_toEndOf="@id/photoImageViewMessage"
        app:layout_constraintTop_toBottomOf="@+id/loginUserMessage"
        >
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/textMessageColor"
            tools:text="last message in jdhfhfghfghfghfghfghfghfdghffhgfhfdghfdghfghfghfghfgh fghfgh gh gh ghgh fskd sdkjfshkd dsjfhs kjdsk shdfsj chat..."
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textMessage"
            android:text="05:34">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>